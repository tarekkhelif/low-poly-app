{
    "env": {
        "browser": true
    },
    "extends": "airbnb-base",
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "max-len": ["error", { "code": 80 }],
        "quotes": ["error", "double"],
        // "vars-on-top": 0,
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-use-before-define": ["error", { "functions": false }],
        "comma-dangle": 0,
        "no-shadow": 0,
        "arrow-parens": ["error", "always"]
    }
}
